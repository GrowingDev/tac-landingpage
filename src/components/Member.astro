---
import type { MemberI } from "../models/member";

export interface Props {
  member: MemberI;
}

const { member } = Astro.props;
---

<div class="md:max-w-xs flex flex-col items-center gap-4 mb-8">
  <img class="w-34 align-self-center" src={member.profileUrl} />
  <h3 class="text-2xl">{member.preName + " " + member.lastName}</h3>
  <p>
    {member.body}
  </p>
</div>
