---
import type { ProjectI } from "../models/project";

export interface Props {
  project: ProjectI;
}

const { project } = Astro.props;
---

<div class="md:max-w-xs flex flex-col items-center gap-4 mb-8">
  <img class="rounded-full w-48 align-self-center" src={project.imageUrl} />
  <h3 class="text-2xl">{project.title}</h3>
  <p>
    {project.body}
  </p>
  <a
    class="bg-transparent text-center lg:w-60 hover:bg-black text-black font-semibold hover:text-white py-2 px-4 border border-black hover:border-transparent rounded"
    href={project.href}>Visit</a
  >
</div>
<style></style>
