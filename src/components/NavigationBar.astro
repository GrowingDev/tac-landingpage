---
import type { NavigationI } from "../models/navigation";

export interface Props {
  navigation: NavigationI;
}

const { navigation } = Astro.props;
---

<nav class="w-full sm:px-4 px-8 py-2 flex items-center justify-between">
  <img class="w-28 h-auto" src={navigation.logoUrl} />
  <div class="hidden gap-4 md:flex">
    {
      navigation.navigationItems.map((navItem) => (
        <a href={"#" + navItem.href} class="uppercase font-medium">
          {navItem.name}
        </a>
      ))
    }
  </div>
  <button id="open-menu-btn" class="md:hidden flex h-6 w-6">
    <svg class="fill-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"
      ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
      <path
        d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
      ></path></svg
    >
  </button>
</nav>
<div
  id="mobile-navigation"
  class="h-screen bg-black hidden p-4 flex-col left-0 right-0 top-0 text-center ">
  <button id="close-menu-btn" class="h-6 w-6 float-right mb-16">
    <svg class="fill-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"
      ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
      <path
        d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
      ></path></svg
    >
  </button>

  <div class="flex flex-col gap-4 ">
    {
      navigation.navigationItems.map((navItem) => (
        <button class="navigation-item">
          <a
            href={"#" + navItem.href}
            class="uppercase font-medium text-2xl text-white">
            {navItem.name}
          </a>
        </button>
      ))
    }
  </div>
  <a href="https://www.teleagriculture.org">
    <img
      class="w-40 h-auto mt-10 mx-auto"
      src="https://teleagriculture.org/wp-content/uploads/2019/03/tac_logo_white.png"
      alt=""
    />
  </a>
</div>
<script>
  const openMenuBtn = document.getElementById("open-menu-btn");
  const closeMenuBtn = document.getElementById("close-menu-btn");
  const mobileNavigation = document.getElementById("mobile-navigation");
  const navItems = document.querySelectorAll("button.navigation-item");

  navItems.forEach((item) => {
    item.addEventListener("click", () => closeMenu());
  });

  if (openMenuBtn) {
    openMenuBtn.addEventListener("click", () => {
      if (mobileNavigation) {
        mobileNavigation.classList.remove("hidden");
        mobileNavigation.classList.add("sticky");
      }
    });
  }

  if (closeMenuBtn) {
    closeMenuBtn.addEventListener("click", () => closeMenu());
  }

  function closeMenu() {
    if (mobileNavigation) {
      mobileNavigation.classList.remove("sticky");
      mobileNavigation.classList.add("hidden");
    }
  }
</script>
<style>
  nav {
    position: fixed;
    top: 0;
  }
</style>
